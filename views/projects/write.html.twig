{% extends 'shared/layout.html.twig' %}
{% block title %}New project{% endblock %}

{% block body %}

    <!-- page-banner-section
        ================================================== -->
    <section class="page-banner-section">
        <div class="container-fluid">
            <h1>
                {{ mode == "edit" ? "Edit" : "New" }}&nbsp;project
            </h1>
        </div>
    </section>
    <!-- End page-banner section -->

    <div class="container">
        <div class="row">
            <div class="col-lg-7">
                <div class="text-left">
                    <p></p>
                    <form method="post">
                        {% if model %}
                            <input name="id" hidden value="{{ model.id }}" type="text">
                        {% endif %}
                        <div class="form-group">
                            <label class="small mx-4">Title</label>
                            <input value="{{ model.title }}" name="title" type="text" class="form-control" placeholder="Title">
                        </div>
                        <div class="form-group">
                            <label class="small mx-4">Subtitle</label>
                            <input value="{{ model.subtitle }}" name="subtitle" type="text" class="form-control" placeholder="Subtitle">
                        </div>
                        <div class="form-group">
                            <label class="small mx-4">Description</label>
                            <textarea name="description" type="text" class="form-control"
                                      placeholder="Description">{{ model.description }}</textarea>
                        </div>
                        <button type="submit" class="btn btn-primary my-4">Save project</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}